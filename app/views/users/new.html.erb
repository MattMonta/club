<h1 class="text-center">Création d'un compte</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, 'Prénom' %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name, 'Nom' %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, 'Mot de passe' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Confirmation du mot de passe' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br/>

      <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
